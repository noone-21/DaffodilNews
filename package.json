{
  "name": "newsapp",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "husky": {
    "hooks": {
      "pre-push": "env-cmd -f ./config/dev.env npm run build && surge --project ./build --domain daffodil-news.surge.sh"
    }
  },
  "homepage": "http://noone-21.github.io/DaffodilNews",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "env-cmd": "^10.1.0",
    "heroku": "^7.7.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-infinite-scroller": "^1.2.6",
    "react-router-dom": "^5.3.3",
    "react-scripts": "^2.1.3",
    "react-top-loading-bar": "^2.1.0",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.19"
  },
  "scripts": {
    "start": "env-cmd -f ./config/dev.env react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.1"
  }
